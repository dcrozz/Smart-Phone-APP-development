<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".index">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID"
        android:id="@+id/l_stdid"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="please input the student id"
        android:ems="15"
        android:id="@+id/t_stdid"
        android:layout_toRightOf="@+id/l_stdid"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/l_stdid"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/l_stdpw"
        android:layout_below="@+id/l_stdid"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="15"
        android:id="@+id/t_stdpw"
        android:layout_toRightOf="@+id/l_stdpw"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/l_stdpw"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start game"
        android:id="@+id/btn_start"
        android:layout_centerInParent="true" />



</RelativeLayout>
